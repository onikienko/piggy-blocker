{
    "manifest_version": 3,
    "name": "Piggy blocker",
    "description": "Clears out russian content from Youtube",
    "default_locale": "uk",
    "version": "0.0.1",
    "background": {
        "service_worker": "background/index.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content/index.js"
            ]
        }
    ],
    "host_permissions": [
        "http://localhost:5000/*"
    ],
    "permissions": [
        "storage",
        "webNavigation",
        "unlimitedStorage",
        "alarms"
    ]
}